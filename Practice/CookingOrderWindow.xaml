<Window x:Class="Practice.CookingOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice"
        mc:Ignorable="d"
        Title="CookingOrderWindow" Closing="Window_Closing" Height="450" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Label Content="Cooking order" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Border BorderBrush="Black" BorderThickness="2" Grid.Row="1">
            <RichTextBox FontSize="15" x:Name="richtextboxorder"/>
        </Border>
    </Grid>
</Window>
